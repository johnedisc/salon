@{
    Layout = "_Layout";
}


@using HairSalon.Models;

<h1>clients</h1>

@if (@Model.Count == 0)
{
  <h3>there are no clients yet</h3>
} 
else
{
    @foreach (Client client in Model)
    {
      <div class="content">@Html.ActionLink($"{client.Last}, {client.First}", "Details", new { id = client.ClientId }) | @client.Stylist.First @client.Stylist.Last</div>
    }
}

<p>@Html.ActionLink("add new client", "Create")</p>
<p>@Html.ActionLink("home", "Index", "Home")</p>


