@{
    Layout = "_Layout";
}


@using HairSalon.Models;

<h1>clients</h1>

@if (@Model.Count == 0)
{
  <h3>there are no clients yet</h3>
} 
else
{
    @foreach (Client client in Model)
    {
    <div class="content">
      <p>@Html.ActionLink($"{client.Last}, {client.First}", "Details", new { id = client.ClientId })</p>
    </div>
    }
}

<h4>@Html.ActionLink("add new client", "Create")</h4>
<h4>@Html.ActionLink("home", "Index", "Home")</h4>


